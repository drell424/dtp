---
title: My Shop Settings
---
<body class="shop-settings">
    <!--[if lt IE 10]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    {{>header}}


     <!-- MAIN CONTENT -->

    <div class="container" id="my-shop">
      <div class="row" id="nav">
        <div class="col-lg-10 col-lg-offset-1">
          <ul>
            <li><a class="active">SHOP SETTINGS</a></li>
            <li><a>SHOP ORDERS</a></li>
            <li><a>MANAGE INVENTORY</a></li>
            <li><a>RATINGS &amp; REVIEWS</a></li>
          </ul>
       </div> <!-- COL NAV -->
      </div> <!-- ROW -->

      <div class="row" id="settings">

        <div class="col-lg-3 col-lg-offset-1 col-md-3 col-sm-4">
          <div class="settings-menu">
            <div class="logo-large"></div>
            <div class="store-name">MP&amp;E Cameras &amp; Lighting</div>
            <a class="edit">Edit Shop Profile</a>
            <div class="settings-nav">
              <div class="top">
                <h3>SETTINGS</h3>
                <h4>MY SHOP</h4>
              </div>
              <ul>
                <li><a href="#" class="active">INFO &amp; APPEARANCE<span>></span></a></li>
                <li><a href="#">POLICIES<span>></span></a></li>
                <li><a href="#">SHIPPING PROFILES<span>></span></a></li>
                <li><a href="#">PAYMENT PROFILES<span>></span></a></li>
              </ul>
            </div> <!-- SETTINGS NAV -->
          </div> <!-- SETTINGS MENU -->
        </div> <!-- COL 3 -->

        <div class="col-lg-7 col-md-8 col-md-offset-1 col-sm-7 col-sm-offset-1">
          <div class="settings-content" id="info">
            <form role="form" class="form-inline">
              <div class="top">
                <h2>MY SHOP</h2>
                <h4>MP&amp;E Cameras &amp; Lighting</h4>
                <a class="change" href="#">Change</a>
              </div> <!-- TOP -->
              <div class="form-group address">
                <div class="title">ADDRESS</div>
                <input type="text" class="form-control address left" placeholder="Street">
                <input type="text" class="form-control address right" placeholder="Street">
                <input type="text" class="form-control address left" placeholder="City">
                <input type="text" class="form-control address small" id="state" placeholder="State">
                <input type="text" class="form-control address small" placeholder="Zip">
              </div> <!-- FORM GROUP ADDRESS -->
              <div class="form-group categories">
                <div class="title">CATEGORIES</div>
                <div class="subtitle">Please check categories for your shop</div>
                <label class="checkbox-inline first">
                  <input type="checkbox" id="inlineCheckbox1" value="cameras"> Cameras
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox" id="inlineCheckbox2" value="lighting"> Lighting
                </label>
                <label class="checkbox-inline">
                  <input type="checkbox" id="inlineCheckbox3" value="option3"> Sound
                </label>
              </div> <!-- FORM GROUP CATEGORIES -->
              <div class="form-group timezone">
                <div class="title">TIME ZONE</div>
                <div class="subtitle">GMT Eastern Standard Time</div>
                <a class="change" href="#">Change</a>
              </div> <!-- FORM GROUP TIMEZONE -->
              <div class="form-group social">
                <div class="title">SOCIAL</div>
                <img src="./images/social-large-fb.png" /> <a class="btn connect">CONNECT</a>
                <img src="./images/social-large-twitter.png" /> <a class="btn connect">CONNECT</a>
              </div> <!-- FORM GROUP SOCIAL -->
              <div class="form-group message">
                <div class="title">MESSAGE TO BUYERS</div>
                <textarea class="form-control" placeholder="Add a message here"></textarea>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group submit">
                <button type="submit" class="btn btn-default">SAVE CHANGES</button>
              </div>
            </form>
          </div> <!-- SETTINGS CONTENT INFO -->

          <div class="settings-content" id="policies">
            <form role="form" class="form-inline">
              <div class="top">
                <h2>MY SHOP</h2>
                <h4>Policies</h4>
              </div> <!-- TOP -->
              
              <div class="form-group message">
                <div class="title">INSURANCE POLICY</div>
                <textarea class="form-control" placeholder=""></textarea>
                <div class="text">Insurance agreement for the rentor to sign</div>
                <button class="btn btn-default">UPLOAD DOCUMENT</button>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group message">
                <div class="title">PAYMENT POLICY</div>
                <textarea class="form-control" placeholder=""></textarea>
                <div class="text">Payment methods, deadlines, taxes, cancellation policy, etc.</div>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group message">
                <div class="title">SHIPPING POLICY</div>
                <textarea class="form-control" placeholder=""></textarea>
                <div class="text">Shipping methods, deadlines, insurance confirmation, international customs, etc.</div>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group message">
                <div class="title">REFUND POLICY</div>
                <textarea class="form-control" placeholder=""></textarea>
                <div class="text">Terms, eligible items, damages, losses, etc.</div>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group message">
                <div class="title">ADDITIONAL INFORMATION</div>
                <textarea class="form-control" placeholder=""></textarea>
                <div class="text">Additional policies, FAQ, custom orders, guarantees</div>
              </div> <!-- FORM GROUP MESSAGE -->
              <div class="form-group submit">
                <button type="submit" class="btn btn-default">SAVE CHANGES</button>
              </div>
            </form>
          </div> <!-- SETTINGS CONTENT POLICIES -->

          <div class="settings-content" id="shipping">
            <form role="form" class="form-inline">
              <div class="top">
                <h2>MY SHOP</h2>
                <h4>Shipping Profile</h4>
              </div> <!-- TOP -->
              
              <div class="form-group message">
                <div class="title">Shipping Profiles</div>
                <div class="text">Shipping profiles allow you to re-use the same shipping settings for multiple listings.<br/>You can add as many different profiles as you need.</div>
                <button href="#shipping-fancy" class="btn btn-default fancybox">CREATE NEW PROFILE</button>
              </div> <!-- FORM GROUP MESSAGE -->
            </form>

            <div id="shipping-fancy">
              <h3>Edit Shipping Profile</h3>
                <form role="form" class="form-inline">
                  <label>Profile Name</label>
                  <input type="text" placeholder=""></input><br/>
                  <label>Shipping Time</label>
                  <select class="form-control">
                    <option>1 Business Day</option>
                    <option>2 Business Days</option>
                  </select><br/>
                  <label>Profile Name</label>
                  <input type="text" placeholder="Add Location" id="location"></input><input type="text" placeholder="$ Cost" id="cost"></input><br/>
                  <div class="buttons">
                    <button type="submit" class="btn btn-default">CANCEL</button>
                    <button type="submit" class="btn btn-default">SAVE CHANGES</button>
                    <a href="#" class="delete">Delete this shipping profile</a>
                  </div>
                </form>
            </div>
          </div> <!-- SETTINGS CONTENT SHIPPING -->

          <div class="settings-content" id="payment">
            <form role="form" class="form-inline">
              <div class="top">
                <h2>MY SHOP</h2>
                <h4>Payment Profile</h4>
              </div> <!-- TOP -->
              <div class="info">
                <h5>Payment Methods You Accept</h5>
                <p>In order to accept credit cards, debit cards and etsy gift cards, you must provide a valid <a href="#">billing credit card</a> and <a href="#">link your bank account</a>. If you issue a refund but your Total Account Balance is not high enough to cover it, we will charge this card.</p>
                <button type="submit" href="#edit-payment-fancy" class="btn btn-default fancybox">ADD NEW METHOD</button>
              </div> <!-- INFO -->
              <div class="methods">
                <div class="title">PAYMENT METHODS</div>
                <div class="method-box">
                  <div class="title">CREDIT CARDS</div>
                  <div class="content">
                    <div>
                      <img src="./images/cc_amex.png" />
                      <img src="./images/cc_visa.png" />
                      <img src="./images/cc_discover.png" />
                      <img src="./images/cc_mastercard.png" />
                    </div>
                    <a class="edit">Edit</a>
                  </div>

                </div> <!-- METHOD BOX -->
                <div class="method-box">
                  <div class="title">COD</div>
                  <div class="content">
                    <div>
                      Payment Upon Delivery
                    </div>
                    <a class="edit">Edit</a>
                  </div>

                </div> <!-- METHOD BOX -->
                <div class="method-box">
                  <div class="title">DEPOSIT</div>
                  <div class="content">
                    <div>
                      50%
                    </div>
                    <a class="edit">Edit</a>
                  </div>

                </div> <!-- METHOD BOX -->
              </div> <!-- METHODS -->
              
            </form>
          </div> <!-- SETTINGS CONTENT PAYMENT -->

        </div> <!-- COL 7 -->

      </div> <!-- ROW SETTINGS -->

    </div> <!-- CONTAINER MY SHOP-->



    <div id="edit-payment-fancy" class="col-lg-7">
      <h3>Edit Payment Profile</h3>
      <form role="form" class="form-inline">
        <label>Profile Name</label>
        <input type="text" placeholder=""></input><br/>
        <label>Payment Type</label>
        <select class="form-control">
          <option>Credit Card</option>
          <option>Credit Card2</option>
        </select><br/>
        <label class="checkbox-inline first inner">
          <input type="checkbox" class="checkbox" id="inlineCheckbox1" value="cameras"> <img src="./images/cc_amex.png" />
        </label><br/>
        <label class="checkbox-inline inner">
          <input type="checkbox" class="checkbox" id="inlineCheckbox2" value="lighting"> <img src="./images/cc_visa.png" />     
        </label><br/>
        <label class="checkbox-inline inner">
          <input type="checkbox" class="checkbox" id="inlineCheckbox3" value="option3"> <img src="./images/cc_discover.png" />
        </label><br/>
        <label class="checkbox-inline inner">
          <input type="checkbox" class="checkbox" id="inlineCheckbox3" value="option3"> <img src="./images/cc_mastercard.png" />
        </label>
        <div class="buttons">
          <button type="submit" class="btn btn-default">CANCEL</button>
          <button type="submit" class="btn btn-default">SAVE CHANGES</button>
          <a href="#" class="delete">Delete this payment profile</a>
        </div>
      </form>

    </div> <!-- EDIT PAYMENT FANCYBOX -->


    {{>footer}}


    {{>bottom-includes}}
</body>